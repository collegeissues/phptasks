{% extends 'base.html.twig' %}

{% block title %}Form{% endblock %}

{% block body %}
    <style type="text/css">
        @keyframes formbackblicks {
            0% {background-color: #3b82f6;}
            20% {background-color: #70a6fd;}
            50% {background-color: #54aeff;}
            100% {background-color: #3b82f6;}
        }

        input {
            width: 200px;
            height: 30px;
            margin-bottom: 30px;
            margin-left: 49px;
            text-align:center;
            border:none;
            border-radius:3px;
        }

        select {
            width: 200px;
            height: 30px;
            margin-left: 49px;
            text-align:center;
            border:none;
            border-radius:3px;
        }

        input:first-child {
            margin-top: 400px;
        }

        input:last-child {
            cursor: pointer;
            margin-top: 50px;
        }

        div {
            width: 300px;
            height: 700px;
            border-radius: 10px;
            border-color: grey;

            margin: 0 auto;
            margin-top: 100px;

            animation-name: formbackblicks;
            animation-duration: 15s;
            animation-iteration-count: infinite;
        }
    </style>

    <div>



        <form method="POST" action="{{ path('create_product') }}" enctype="multipart/form-data">
            <input name="name" placeholder="name">
            <input name="count" placeholder="count">
            <input name="price" placeholder="price">

            <select name="category">
                {% for category in categories %}
                    <option value="{{ category.id }}">{{ category.name }}</option>
                {% endfor %}
            </select>
            <input type="text" id="title" name="title" required>
            <!-- Поле для выбора файла -->
            <input type="file" name="file" placeholder="upload file">

            <input name="submit" type="submit" value="Send">
        </form>
    </div>
{% endblock %}
